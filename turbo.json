{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["API_BOOTSTRAP_SAFE_MODE", "AGENT_PORT", "PRINT_AGENT_PORT", "TURBO_CONCURRENCY"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "smoke": {
      "cache": false,
      "outputs": []
    }
  }
}
