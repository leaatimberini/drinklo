enum StatusPageSubscriptionChannel {
  EMAIL
  WEBHOOK
}

enum StatusPageSubscriptionStatus {
  UNVERIFIED
  ACTIVE
  PAUSED
}

enum ProductTourSurface {
  ADMIN
  STOREFRONT
}

enum ProductTourStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

enum ProductTourTriggerType {
  ALWAYS
  FIRST_TIME
  FEATURE_UNUSED
  TRIAL_NEARING_END
}

enum ProductTourEventType {
  STARTED
  COMPLETED
  ABANDONED
}

enum InvoiceStatus {
  OPEN
  PAID
  VOID
}

enum PartnerStatus {
  ACTIVE
  PAUSED
  BLOCKED
}

enum ReferralLinkStatus {
  ACTIVE
  DISABLED
}

enum LeadStatus {
  CLICKED
  QUALIFIED
  DISQUALIFIED
  CONVERTED
}

enum ConversionStatus {
  ATTRIBUTED
  REVIEW
  REJECTED
  APPROVED
}

